<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DoubleSlitController">
   <top>
      <VBox alignment="CENTER" prefHeight="51.0" prefWidth="620.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Double-Slit Interference Simulation" textAlignment="CENTER" />
      </VBox>
   </top>
   
   <bottom>
      <VBox alignment="CENTER" spacing="15.0">
         <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
         
         <Label fx:id="wavelengthLabel" maxWidth="400.0" text="Wavelength: 400 nm" />
         <Slider fx:id="wavelengthSlider" maxWidth="400.0" />
         
         <Label fx:id="separationLabel" maxWidth="400.0" text="Slit Separation: 0 μm" />
         <Slider fx:id="separationSlider" maxWidth="400.0" />
         
         <Label fx:id="widthLabel" maxWidth="400.0" text="Slit Width: 0 μm" />
         <Slider fx:id="widthSlider" maxWidth="400.0" />
         
         <Label fx:id="screenDistanceLabel" maxWidth="400.0" text="Screen Distance: 0.00 m" />
         <Slider fx:id="screenDistanceSlider" maxWidth="400.0" />
         
         <Button fx:id="resetButton" onAction="#reset" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Reset" />
      </VBox>
   </bottom>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="explanationCanvas" height="350.0" nodeOrientation="INHERIT" width="500.0" HBox.hgrow="ALWAYS" />
            <Canvas fx:id="simulationCanvas" height="350.0" nodeOrientation="INHERIT" width="500.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </center>
</BorderPane>
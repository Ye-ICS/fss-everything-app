<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fss.everythingapp.simulations.doubleslit/DoubleSlitController">
   <top>
      <VBox alignment="CENTER" prefHeight="51.0" prefWidth="620.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Double-Slit Interference Simulation" textAlignment="CENTER" />
      </VBox>
   </top>
   
   <bottom>
      <HBox spacing="20.0">
         <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
         
         <!-- Explanation Text Area -->
         <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
            <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Simulation Explanation" />
            <TextArea fx:id="explanationTextArea" editable="false" prefHeight="205.0" prefWidth="150.0" text="DOUBLE-SLIT INTERFERENCE SIMULATION&#10;------------------------------------------------&#10;&#10;LEFT CANVAS - Experimental Setup:&#10;• Wave Source: Colored circle representing monochromatic light source&#10;• Incident Beam: Rectangular light beam traveling from source to barrier&#10;• Barrier with Slits: Gray barrier with two yellow-highlighted openings&#10;• Detection Screen: White vertical line where interference is observed&#10;• Wave Propagation: Curved sinusoidal waves emanating from both slits&#10;• Color Coding: Wave color corresponds to selected wavelength&#10;&#10;RIGHT CANVAS - Interference Pattern:&#10;• Intensity Distribution: Horizontal bands showing light intensity&#10;• Bright Fringes: High intensity regions (constructive interference)&#10;• Dark Fringes: Low intensity regions (destructive interference)&#10;• Central Maximum: Brightest fringe at center where path difference = 0&#10;• Pattern Width: Depends on wavelength, slit separation, and screen distance&#10;• Color Intensity: Brightness indicates wave amplitude at each position&#10;&#10;PHYSICS PRINCIPLES:&#10;• Wave Nature: Light exhibits wave properties through interference&#10;• Superposition: Waves from both slits combine at detection screen&#10;• Path Difference: Determines constructive/destructive interference&#10;• Diffraction: Single slit effects modulate the overall pattern&#10;• Wavelength Effect: Longer wavelengths create wider fringe spacing&#10;• Slit Separation: Closer slits produce wider interference fringes&#10;&#10;Adjust parameters to explore how each variable affects the wave behavior!" wrapText="true" VBox.vgrow="ALWAYS" />
         </VBox>
         
         <!-- Controls Section -->
         <VBox alignment="CENTER" spacing="15.0" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Simulation Controls" />
            
            <VBox alignment="CENTER" spacing="8.0">
               <Label fx:id="wavelengthLabel" maxWidth="300.0" text="Wavelength: 400 nm" />
               <Slider fx:id="wavelengthSlider" max="750.0" maxWidth="300.0" min="400.0" value="400.0" />
            </VBox>
            
            <VBox alignment="CENTER" spacing="8.0">
               <Label fx:id="separationLabel" maxWidth="300.0" text="Slit Separation: 0 μm" />
               <Slider fx:id="separationSlider" max="500.0" maxWidth="300.0" />
            </VBox>
            
            <VBox alignment="CENTER" spacing="8.0">
               <Label fx:id="widthLabel" maxWidth="300.0" text="Slit Width: 0 μm" />
               <Slider fx:id="widthSlider" max="100.0" maxWidth="300.0" />
            </VBox>
            
            <VBox alignment="CENTER" spacing="8.0">
               <Label fx:id="screenDistanceLabel" maxWidth="300.0" text="Screen Distance: 0.00 m" />
               <Slider fx:id="screenDistanceSlider" max="2.0" maxWidth="300.0" />
            </VBox>
            
            <Button fx:id="resetButton" onAction="#reset" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px 16px;" text="Reset" />
         </VBox>
      </HBox>
   </bottom>
   
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="explanationCanvas" height="350.0" nodeOrientation="INHERIT" width="500.0" HBox.hgrow="ALWAYS" />
            <Canvas fx:id="simulationCanvas" height="350.0" nodeOrientation="INHERIT" width="500.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </center>
</BorderPane>

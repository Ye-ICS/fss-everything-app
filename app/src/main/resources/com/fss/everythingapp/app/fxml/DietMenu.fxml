            <ProgressBar fx:id="carbBar" layoutX="78.0" layoutY="85.0" prefWidth="200.0" progress="0.0" />
            <Text fx:id="fatsGoal" layoutX="145.0" layoutY="131.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Fats Goal" />
            <ProgressBar fx:id="fatsBar" layoutX="78.0" layoutY="66.0" prefWidth="200.0" progress="0.0" />
            <VBox alignment="BOTTOM_CENTER" prefHeight="204.0" prefWidth="335.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#backToMM" text="Back" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets top="40.0" />
         </padding>
      </VBox>
   </center>

</BorderPane>

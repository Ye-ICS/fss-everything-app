      </ImageView>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="calorieGoal" strokeType="OUTSIDE" strokeWidth="0.0" text="Calorie Goal" />
            <ProgressBar fx:id="calorieBar" prefWidth="200.0" progress="0.0" />
            <Text fx:id="protienGoal" layoutX="145.0" layoutY="63.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Protein Goal" />
            <ProgressBar fx:id="proteinBar" layoutX="78.0" layoutY="102.0" prefWidth="200.0" progress="0.0" />

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="600.0" prefWidth="335.0">

   <top>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" translateX="-4.0" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../logo.png" />
         </image>
      </ImageView>
   </top>

   <center>
      <VBox alignment="BOTTOM_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="40.0" />
         </padding>
         <children>
            <VBox alignment="TOP_RIGHT">
               <padding>
                  <Insets top="-20.0" />
               </padding>
               <children>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                     <buttons>
                        <Button mnemonicParsing="false" prefHeight="30.0" text="Diet" />
                        <ProgressBar prefHeight="20.0" prefWidth="200.0" progress="0.0" />
                     </buttons>
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </ButtonBar>

                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                     <buttons>
                        <Button mnemonicParsing="false" prefHeight="30.0" text="Excersize" />
                        <ProgressBar prefHeight="20.0" prefWidth="200.0" progress="0.0" />
                     </buttons>
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </ButtonBar>

                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                     <buttons>
                        <Button mnemonicParsing="false" prefHeight="30.0" text="Sleep" />
                        <ProgressBar prefHeight="20.0" prefWidth="200.0" progress="0.0" />
                     </buttons>
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </ButtonBar>

                  <Button mnemonicParsing="false" onAction="#openLogRecords" text="Log" translateX="-138.0" translateY="20.0">
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>

            <Button mnemonicParsing="false" onAction="#openLogMenu" prefHeight="62.0" prefWidth="172.0" text="+">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>

</BorderPane>
